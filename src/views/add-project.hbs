            <li class="nav-item">
              <a class="nav-link text-light" href="/testimoni">Testimoni</a>

            </li>
            <ul class="dropdown-menu bg-light">
              <li><a
                  class="dropdown-item text-light text-"
                  href="/"
                >Home</a></li>
              <li><a class="dropdown-item text-warning" href="/add-project">Add
                  Project</a></li>
              <li><a
                  class="dropdown-item text-light"
                  href="/testimoni"
                >Testimoni</a></li>
              <li><a class="dropdown-item text-light" href="/contact">Contact me</a>
              </li>
            </ul>

          </ul>
          <form class="d-block">
            <a
              class="nav-link text-light rounded bg-black fs-5 d-flex justify-content-center"
              href="/contact"
            >Contact me</a>
          </form>
        </div>
      </div>
    </nav>
    <div class="container mt-5 d-flex">
      <form
        method="post"
        action="/add-project"
        class="container mt-3 bg-light pr-3 pl-3 pt-3"
        id="list-project-container"
        enctype="multipart/form-data"
      >
        <h2 style="margin: 25px; text-align: center; font-size: 28px">
          ADD MY PROJECT
        </h2>
        <div class="form-group">
          <label> Project Name </label>
          <input
            id="input-project-name"
            name="projectTitle"
            class="form-control"
          />
        </div>
        <div class="d-flex justify-content-between mt-3">
          <div>
            <label> Start Date </label>
            <input
              id="input-start-date"
              name="startDate"
              type="date"
              class="form-control"
            />
          </div>

          <div>
            <label> End Date </label>
            <input
              id="input-end-date"
              name="endDate"
              type="date"
              class="form-control w-100"
            />
          </div>
        </div>
        <div class="mt-3">
          <label for=" description">Description:</label>
          <textarea
            class="form-control"
            id="input-description"
            placeholder="Tulis deskripsi Anda"
            name=" description"
            rows="4"
          ></textarea>
        </div>
        <div class="container mt-3">
          <div class="upload-blog">
            <div class="form-detail">
              <label> Technologies </label>
              <div class="form-detail-technologies">
                <div class="input-checkbox">
                  <input
                    type="checkbox"
                    id="nodejs"
                    class="input-technologies"
                    name="framework"
                  />
                  <label for="nodejs">Node JS</label>
                </div>
                <div class="input-checkbox">
                  <input
                    type="checkbox"
                    id="reactjs"
                    class="input-technologies"
                    name="framework"
                  />
                  <label for="reactjs">React JS</label>
                </div>
                <div class="input-checkbox">
                  <input
                    type="checkbox"
                    id="python"
                    class="input-technologies"
                    name="framework"
                  />
                  <label for="python">Python</label>
                </div>
                <div class="input-checkbox">
                  <input
                    type="checkbox"
                    id="javaScript"
                    class="input-technologies"
                    name="framework"
                  />
                  <label for="javaScript">JavaScript</label>
                </div>
              </div>
            </div>
            <div class="form-detail">
              <label> Upload Image </label>
              <input
                placeholder="Attach File"
                type="file"
                id="input-image"
                name="inputImage"
              />
            </div>

            <div class="d-flex justify-content-end gap-3">
              <button type="reset" class="btn btn-dark">Clear</button>
              <button
                onclick="whenFormEmpty()"
                type="submit"
                class="btn btn-dark"
              >Send</button>
            </div>
          </div>
        </div>
      </form>

    </div>
    <script src="../assets/js/blog.js"></script>

  </body>

</html>